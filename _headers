# PaymentHood Cache Headers Configuration
# For Netlify, Cloudflare Pages, and similar platforms

# HTML pages - 1 hour cache
/*.html
  Cache-Control: public, max-age=3600, must-revalidate

# HTML root
/
  Cache-Control: public, max-age=3600, must-revalidate

# CSS files - 1 year cache
/assets/css/*
  Cache-Control: public, max-age=31536000, immutable

# JavaScript files - 1 year cache
/assets/js/*
  Cache-Control: public, max-age=31536000, immutable

# Images - 1 year cache
/assets/images/*
  Cache-Control: public, max-age=31536000, immutable

# Fonts - 1 year cache
/assets/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# Favicon - 1 year cache
/favicon.png
  Cache-Control: public, max-age=31536000, immutable

/favicon.ico
  Cache-Control: public, max-age=31536000, immutable

# Site manifest - 1 month cache
/site.webmanifest
  Cache-Control: public, max-age=2592000

# Sitemap and robots - 1 day cache
/sitemap.xml
  Cache-Control: public, max-age=86400

/robots.txt
  Cache-Control: public, max-age=86400
