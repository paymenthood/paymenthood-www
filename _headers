# PaymentHood Cache Headers Configuration
# For Netlify, Cloudflare Pages, and similar platforms

# HTML pages - 1 hour cache + Early Hints preload
/*.html
  Cache-Control: public, max-age=3600, must-revalidate
  Link: </assets/css/vendor.bundle.css>; rel=preload; as=style, </assets/css/style.css>; rel=preload; as=style, </assets/fonts/Roboto-Medium.woff2>; rel=preload; as=font; type=font/woff2; crossorigin

# HTML root
/
  Cache-Control: public, max-age=3600, must-revalidate
  Link: </assets/css/vendor.bundle.css>; rel=preload; as=style, </assets/css/style.css>; rel=preload; as=style, </assets/images/home/banner-bg-large.webp>; rel=preload; as=image; type=image/webp, </assets/fonts/Roboto-Medium.woff2>; rel=preload; as=font; type=font/woff2; crossorigin

# CSS files - 1 year cache
/assets/css/*
  Cache-Control: public, max-age=31536000, immutable

# JavaScript files - 1 year cache
/assets/js/*
  Cache-Control: public, max-age=31536000, immutable

# Images - 1 year cache
/assets/images/*
  Cache-Control: public, max-age=31536000, immutable

# Fonts - 1 year cache
/assets/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# Favicon - 1 year cache
/favicon.png
  Cache-Control: public, max-age=31536000, immutable

/favicon.ico
  Cache-Control: public, max-age=31536000, immutable

# Site manifest - 1 month cache
/site.webmanifest
  Cache-Control: public, max-age=2592000

# Sitemap and robots - 1 day cache
/sitemap.xml
  Cache-Control: public, max-age=86400

/robots.txt
  Cache-Control: public, max-age=86400
